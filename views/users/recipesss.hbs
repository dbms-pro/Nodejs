<div id="recipe-container" class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4>{{recipe_name}}</h4>
                </div>
                <div class="card-body">
                    <img  class="card-img-top" src="/view_image/{{image_id}}" alt="{{recipe_name}}" width="200" height="200">
                    <p class="card-text">{{ingredients}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
