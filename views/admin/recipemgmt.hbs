<!DOCTYPE html>
<html>
<head>
  <title>Recipe List</title>
</head>
<body>
  <h1>Recipe List</h1>
  <ul>
  {{#each recipes}}
      <li>
        <h2>{{name}}</h2>
        <p>{{ingredients}}</p>
        <img src="{{image}}" alt="{{name}}">
        <form action="/recipes/{{_id}}" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit">Delete</button>
        </form>
        <form action="/recipes/{{_id}}/edit" method="GET">
          <button type="submit">Edit</button>
        </form>
      </li>
    {{/each}}
  </ul>
</body>
</html>
